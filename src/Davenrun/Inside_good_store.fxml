<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane id="AnchorPane" prefHeight="800.0" prefWidth="1000.0" styleClass="mainFxmlClass" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Davenrun.Inside_good_storeController">
               
        <TextArea fx:id = "prompt" layoutX = "70" layoutY = "25" />
        <Label fx:id = "Storeactions" layoutX = "50" layoutY = "100" text = "Store actions"/>
        <ComboBox fx:id="buy_gooditem" layoutX="50" layoutY="150.0"  />  
        <Button fx:id = "buy_gooditem_submit" layoutX="50" layoutY="200.0" text = "Buy weapon"  onAction="#BuyItem"  /> 
        <ComboBox fx:id="sell_gooditem" layoutX="250" layoutY="150.0" />  
        <Button fx:id = "sell_gooditem_submit" layoutX="250" layoutY="200.0" text = "Sell weapon" onAction="#SellItem"  /> 
        
        <ComboBox fx:id = "Look" layoutX="50" layoutY="350.0" />  
        <Button fx:id="button" layoutX="50" layoutY="400.0" mnemonicParsing="false" text="Submit Action" /> 
        <TextArea fx:id = "stats" layoutX = "50" layoutY = "500" />           
        <Label fx:id = "Interactions" layoutX = "500" layoutY = "100" text = "Interact with Ford Goodman"/>  
        <Button fx:id = "Player_stats" layoutX="250" layoutY="350.0"  mnemonicParsing="false" text="Player stats"  onAction = "#stats" />       
                    
        <Button fx:id="Hows_bussinse" layoutX="500" layoutY="150.0" mnemonicParsing="false" text="How is bussinse?" onAction = "#Hows_bussinse" />    
        <Button fx:id="Exit" layoutX="500" layoutY="200.0" mnemonicParsing="false" text="Exit"  onAction = "#exit" />
    

</AnchorPane>
